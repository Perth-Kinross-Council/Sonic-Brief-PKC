
{
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "enabled": true,
        "registration": {
          "openIdIssuer": "${OPENID_ISSUER}",
          "clientSecretSettingName": "IGNORED"
        }
      }
    }
  },
  "routes": [
    {
      "route": "/login",
      "allowedRoles": ["anonymous"],
      "rewrite": "/index.html"
    },
    {
      "route": "/*",
      "allowedRoles": ["anonymous"],
      "rewrite": "/index.html"
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/static/*",
      "/images/*"
    ]
  }
}
